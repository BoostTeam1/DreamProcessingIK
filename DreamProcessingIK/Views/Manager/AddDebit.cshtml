@model UserDebitDto
@{
    Layout = "~/Views/Shared/_Manager.cshtml";
}


<form asp-controller="Manager"  asp-action="AddDebit"  method="post">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group first">
                    <label asp-for="StartDate">Başlangıç Tarihi:</label>
                    <input asp-for="StartDate" class="form-control" type="datetime" > 

                </div>

                <div class="form-group first">
                    <label asp-for="EndDate">Bitiş Tarihi:</label>
                    <input asp-for="EndDate" class="form-control" type="datetime" > 
                    <span asp-validation-for="EndDate" class="text-danger"></span>
              </div>
              
                <div class="form-group first">
                    <label asp-for="EndDate">Bitiş Tarihi:</label>
                    <input asp-for="EndDate" class="form-control" type="datetime" > 
                    <span asp-validation-for="EndDate" class="text-danger"></span>
              </div>
              <div class="form-group last mb-4">
                <label asp-for="DebitId" class="control-label"> </label>
                 <select asp-for="DebitId" class="form-control" asp-items="ViewBag.Product"></select>
                <span asp-validation-for="DebitId" class="text-danger"></span>
              </div>

              <div class="form-group last mb-4">
                <label asp-for="IsReceived">Alındı mı ?</label>
                <input asp-for="IsReceived" class="form-control" > 
                <span asp-validation-for="IsReceived" class="text-danger"></span>
              </div>
               

              <input type="submit" value="Kaydet" class="btn btn-block btn-primary">

            </form>
